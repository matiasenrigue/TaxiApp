FROM node:20

WORKDIR /app/backend

# Copy base config from build context root
COPY tsconfig.base.json /app/tsconfig.base.json

# Copy package files
COPY apps/backend/package*.json ./
RUN npm install

# Copy backend source code
COPY apps/backend ./

# Build TypeScript
RUN npm run build

# Expose port
EXPOSE 5000

# Run compiled JavaScript
CMD ["node", "dist/server.js"]