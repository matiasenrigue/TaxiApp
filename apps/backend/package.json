{
  "name": "backend",
  "version": "1.0.0",
  "private": true,
  "main": "src/index.ts",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev:ts": "ts-node-dev --respawn --transpile-only src/server.ts",
    "dev:js": "nodemon --watch dist --exec \"node dist/server.js\"",
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node src/server.ts'",
    "devStart": "nodemon dist/server.js",
    "test": "cross-env NODE_ENV=test jest",
    "create-db": "ts-node --transpile-only src/scripts/create-db.ts"
  },
  "dependencies": {
    "express": "^5.1.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.2",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.15.31",
    "@types/pg": "^8.15.4",
    "@types/sequelize": "^4.28.20",
    "@types/supertest": "^6.0.3",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "sqlite3": "^5.1.7",
    "supertest": "^7.1.1",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  }
}
